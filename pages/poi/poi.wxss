.section{
  width: 100%;
  display:-webkit-box;
  -webkit-box-orient: horizontal; 
}
.section input{
  width:70%;
  margin:5px 5px;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
  -webkit-box-flex: 1;
}

.section button{
  display:inline;
  margin:5px,0;
  font-size: 15px;
  border:1px solid #c3c3c3;
  height:50px;
  line-height: 43px;
  padding:4px 5px;
  color: white;
  background-color: #f24f3b;
}
.map_container{
  position: absolute;
  top: 42px;
  bottom: 80px;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.button_text{
  display:inline-flex;
  margin:0 5px; 
  font-size:15px;
}
.detail_button{
  position: absolute;
  font-size:10px;
  right: 0;
  display:inline;
  margin:0 5px 0 0;
}
.block_grey{
  background-color:rgba(200,200,200,0.2);
  height:50px;
}
.block_white{
  background-color:white;
}
.block_detail_text_3{
  height:40px;
  line-height: 40px;
}
.init_map_text{
  padding-left: 5px;
}
.map_text_wc_detail{
  height: 80px;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  background: #fff;
}
.forWho{
  font-size:10px;
  display:inline;
}
.start_end_Time{
